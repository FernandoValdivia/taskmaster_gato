    "components": {
        "schemas": {
            "Task": {
                "properties": {
                    "id": {
                        "description": "ID de la tarea",
                        "type": "integer",
                        "format": "int64"
                    },
                    "title": {
                        "description": "Título de la tarea",
                        "type": "string"
                    },
                    "description": {
                        "description": "Descripción de la tarea",
                        "type": "string"
                    },
                    "status": {
                        "description": "Estado de la tarea",
                        "type": "string"
                    },
                    "due_date": {
                        "description": "Fecha de vencimiento de la tarea",
                        "type": "string",
                        "format": "date-time"
                    },
                    "user_id": {
                        "description": "ID del usuario al que pertenece la tarea",
                        "type": "integer",
                        "format": "int64"
                    },
                    "created_at": {
                        "description": "Fecha de creación de la tarea",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Fecha de última actualización de la tarea",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "description": "ID del usuario",
                        "type": "integer",
                        "format": "int64"
                    },
                    "name": {
                        "description": "Nombre del usuario",
                        "type": "string"
                    },
                    "email": {
                        "description": "Correo electrónico del usuario",
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "description": "Contraseña del usuario (solo para creación/actualización)",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Fecha de creación del usuario",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Fecha de última actualización del usuario",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Autenticación mediante token JWT",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Tasks",
            "description": "Operaciones relacionadas con las tareas"
        },
        {
            "name": "Users",
            "description": "Operaciones relacionadas con los usuarios"
        }
    ]
